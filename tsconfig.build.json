{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "./",
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "module": "commonjs",
        "outDir": "./dist/",
        "resolveJsonModule": true,
        "rootDir": "./",
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2021"
    },
    "exclude": ["**/*.test.ts", "**/*.stub.ts", "node_modules", "dist"],
    "include": ["./src/index.ts"]
}
